/* pages/rank/rank.wxss */
.bac {
  width: 375px;
  height: 620px;
  background-color:  rgb(246,195,68);
}
.foot {
  background-color: rgb(254, 244, 208);
  height: 9%;
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.foot_pic {
  width: 33.3%;
  height: 100%;
}
.foot_img {
  width: 50%;
  height: 70%;
}
.main {
  background-color: rgb(246,195,68);
  height: 91%;
  width: 100%;
  position: relative;
}
.ifm_text {
  color: white;
  font-size: 65%;
  position: relative;
  top: 15%;
}
.ifm {
  height: 90%;
  width: 95%;
  background: rgb(237, 96, 45);
  position: relative;
  margin-bottom: 5%;
  margin-left: auto;
  margin-right: auto;
  border-radius: 5px;
  border:3px red;
  text-align: center;
}
.msg {
  position: relative;
  top: 5%;
  width: 100%;
  height: 10%;
}
.mid {
  height: 90%;
  width: 100%;
}
.line {
  height: 8%;
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 70%;
  top: 6%;
  left: 10%;
  position: relative;
}
.rank {
  width: 30%;
  height: 30%;
}
.name {
  width: 30%;
  height: 30%;
}
.point {
  width: 30%;
  height: 30%;
}