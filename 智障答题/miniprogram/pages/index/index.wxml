<!--pages/index/home.wxml-->
<view class='container'>

  <view class='main'>
    <view class='top_pic'>
      <image src='../../images/logo.jpg' mode='aspectFit'></image>
    </view>
    <view class='write'>
      <text class='write_msgg'>请输入姓名：</text>
      <input class='write_msg' placeholder='          姓名必填' type='text' bindinput ="userNameInput" auto-focus />
      <text class='write_msgg'>请输入手机号：</text>
      <input class='write_msg' placeholder='        手机号必填' type='number' bindinput ="mobileInput" maxlength='11' auto-focus />
    </view>
    <view class='msg'>
      <view class='ifm'><button class='ifm_text' bindtap='start' >开始答题</button></view>
      <view class='ifm'><text class='ifm_text'>已经有{{joiner_num}}人参加此活动</text></view>
      <view class='ifm'><text class='ifm_text'>分享我的快乐</text></view>
      <view class='ifm'><text class='ifm_text'>技术支持：宁夏远拓网络科技有限公司</text></view>
    </view>
  </view>


</view>


